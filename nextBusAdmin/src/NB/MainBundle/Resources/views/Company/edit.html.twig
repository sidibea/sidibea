{% extends "::base.html.twig" %}

{% block pagestyle %}
    <link rel="stylesheet" type="text/css" href="{{ absolute_url(asset('assets/global/plugins/select2/select2.css')) }}"/>
    <link rel="stylesheet" type="text/css" href="{{ absolute_url(asset('assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.min.css')) }}"/>
    <link rel="stylesheet" type="text/css" href="{{ absolute_url(asset('assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.min.css')) }}"/>
    <link rel="stylesheet" type="text/css" href="{{ absolute_url(asset('assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css')) }}"/>
    <!-- END PAGE LEVEL PLUGIN STYLES -->
{% endblock %}


{% block content %}

    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Compagnies de tranport <small>Nouvelle compagnie de transport</small>
    </h3><br>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="{{ path('nb_main_company') }}">Acceuil</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Catalogues</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Compagnies</a>
            </li>
        </ul>

    </div>
    <!-- END PAGE HEADER--><br>

    <div class="row">
        <div class="col-md-12 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet box green ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-gift"></i> {{ company.nom }}
                    </div>
                    <div class="tools">
                        <a href="" class="collapse">
                        </a>

                    </div>
                </div>
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    {{ form_start(form, {'attr': {'id': 'form_add_company', 'class' : 'form-horizontal' }}) }}

                    {# Les erreurs générales du formulaire. #}
                    {{ form_errors(form) }}
                    <div class="form-body">
                        <div class="form-group">
                            <label class="control-label col-md-3">Nom de la compagnie <span class="required">
											* </span>
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder' : 'Nom de la compagnie' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Slogan</label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.slogan, {'attr': {'class': 'form-control', 'placeholder' : 'Slogan de la compagnie' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Description</label>
                            <div class="col-md-8">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder' : 'Slogan de la compagnie' }}) }}
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="control-label col-md-3">Telephone  <span class="required">
											* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder' : 'Numero de telephone' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Adresse  <span class="required">
											* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder' : 'Numero de telephone' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Email  <span class="required">
											* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder' : 'Adresse Email' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Meta Titre  <span class="required">
											* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.metatitre, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Meta Description  <span class="required">
											* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.meta_description, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Mot clé  <span class="required">
											* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.motcle, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Commission  <span class="required">
											* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.commission, {'attr': {'class': 'form-control', 'placeholder' : '' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Logo de la compagnie <span class="required">
											* </span>
                            </label>
                            <div class="col-md-4">
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.logo, {'attr': {'class': '', 'placeholder' : 'Description' }}) }}
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Active <span class="required">
											* </span>
                        </label>
                        <div class="col-md-4">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.active, {'attr': {'class': '', 'placeholder' : '' }}) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Ajouter</button>
                                <button type="button" class="btn default">Annuler</button>
                            </div>
                        </div>
                    </div>
                    {{ form_rest(form) }}

                    {# Fermeture de la balise <form> du formulaire HTML #}
                    {{ form_end(form) }}
                </div>
            </div>
            <!-- END SAMPLE FORM PORTLET-->
        </div>
    </div>

{% endblock %}