{% extends "::base.html.twig" %}

{% block pagestyle %}
    <link rel="stylesheet" type="text/css" href="{{ absolute_url(asset('assets/global/plugins/select2/select2.css')) }}"/>
    <link rel="stylesheet" type="text/css" href="{{ absolute_url(asset('assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.min.css')) }}"/>
    <link rel="stylesheet" type="text/css" href="{{ absolute_url(asset('assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.min.css')) }}"/>
    <link rel="stylesheet" type="text/css" href="{{ absolute_url(asset('assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css')) }}"/>
    <!-- END PAGE LEVEL PLUGIN STYLES -->
{% endblock %}


{% block content %}

    <!-- BEGIN PAGE HEADER-->
    <h3 class="page-title">
        Bus <small>Liste des bus</small>
    </h3><br>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="{{ path('nb_main_company') }}">Acceuil</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Catalogues</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Bus</a>
            </li>
        </ul>

        <div class="page-toolbar">
            <div class="btn-group pull-right">
                <a href="{{ path('nb_main_bus_add') }}" class="btn btn-fit-height grey-salt" >
                    Ajouter <i class="fa fa-plus"></i>
                </a>
            </div>
        </div>

    </div>
    <!-- END PAGE HEADER--><br>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue-hoki">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Compagnies de transports
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="sample_1">
                    <thead>
                    <tr>

                        <th>
                            Compagnie
                        </th>
                        <th>
                            NÂ° Matricule
                        </th>
                        <th>
                            Nbre de place
                        </th>

                        <th>Options</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for key, val in list %}
                        <tr>
                            <td><b>{{ val.company.nom }}</b></td>
                            <td>{{ val.regno }}</td>
                            <td>{{ val.capacity }}</td>
                            <td>
                                <div class="clearfix">

                                    <a href="{{ path('nb_main_bus_edit', {'id': val.id}) }}" class="btn blue">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="javascript:;" class="btn red">
                                        <i class="fa "></i>
                                    </a>
                                </div>
                            </td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>



    {% endblock %}





    {% block javascript %}
        <!-- BEGIN PAGE LEVEL PLUGINS -->
        <script type="text/javascript" src="{{ absolute_url(asset('assets/global/plugins/select2/select2.min.js')) }}"></script>
        <script type="text/javascript" src="{{ absolute_url(asset('assets/global/plugins/datatables/media/js/jquery.dataTables.min.js')) }}"></script>
        <script type="text/javascript" src="{{ absolute_url(asset('assets/global/plugins/datatables/extensions/TableTools/js/dataTables.tableTools.min.js')) }}"></script>
        <script type="text/javascript" src="{{ absolute_url(asset('assets/global/plugins/datatables/extensions/ColReorder/js/dataTables.colReorder.min.js')) }}"></script>
        <script type="text/javascript" src="{{ absolute_url(asset('assets/global/plugins/datatables/extensions/Scroller/js/dataTables.scroller.min.js')) }}"></script>
        <script type="text/javascript" src="{{ absolute_url(asset('assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js')) }}"></script>
        <!-- END PAGE LEVEL PLUGINS -->
        <!-- BEGIN PAGE LEVEL SCRIPTS -->
        <script src="{{ absolute_url(asset('assets/global/scripts/metronic.js')) }}" type="text/javascript"></script>
        <script src="{{ absolute_url(asset('assets/admin/layout/scripts/layout.js')) }}" type="text/javascript"></script>
        <script src="{{ absolute_url(asset('assets/admin/layout/scripts/quick-sidebar.js')) }}" type="text/javascript"></script>
        <script src="{{ absolute_url(asset('assets/admin/layout/scripts/demo.js')) }}" type="text/javascript"></script>
        <script src="{{ absolute_url(asset('assets/admin/pages/scripts/table-advanced.js')) }}"></script>
    {% endblock %}


    {% block scripts %}
    <script>
        jQuery(document).ready(function() {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            QuickSidebar.init(); // init quick sidebar
            Demo.init(); // init demo features
            TableAdvanced.init();
        });
    </script>
{% endblock %}